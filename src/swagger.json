                                }
                             ]
                          }
                       }
                    }
                 }
              }
           },
           "description":"Criando pedido do cliente pelo seu Id",
           "tags":[
              "Orders"
           ],
           "security": [{"bearerAuth": []}],
           "responses":{
              "404":{
                 "description":"Not found"
              },
              "200":{
                 "description":"OK"
              }
           }
        }
     },
     "/customer":{
      "post":{
         "summary":"Criar cliente",
         "requestBody":{
            "content":{
               "application/json":{
                  "schema":{
                     "$ref":"#/components/schemas/createCustomer"
                  },
                  "examples":{
                     "Costumer id and Product list":{
                        "value":{
                          "email":"john@doe.com",
                          "name":"John Doe"
                        }
                     }
                  }
               }
            }
         },
         "description":"Criando um cliente",
         "tags":[
            "Customers"
         ],
         "security": [{"bearerAuth": []}],
         "responses":{
            "409":{
               "description":"Conflict"
            },
            "200":{
               "description":"OK"
            }
         }
      },
      "get":{
        "summary":"Listar clientes",
        "description":"Lista os clientes retornando uma paginação",
        "tags":[
           "Customers"
        ],
        "responses":{
           "409":{
              "description":"Conflict"
           },
           "200":{
              "description":"OK"
           }
        }
     }
   },
   "/customer/{id}":{
    "put":{
       "summary":"Atualiza cliente por ID ",
       "description":"Atualiza um cliente com base no seu UUID",
       "parameters":[
        {
           "name":"id",
           "in":"path",
           "description":"ID do cliente",
           "required":true,
           "schema":{
              "type":"string",
              "format":"uuid"
           }
        }
     ],
     "requestBody":{
      "content":{
         "application/json":{
            "schema":{
               "$ref":"#/components/schemas/createCustomer"
            },
            "examples":{
               "Costumer id and Product list":{
                  "value":{
                    "email":"john@doe.com",
                    "name":"John Doe"
                  }
               }
            }
         }
      }
   },
       "tags":[
          "Customers"
       ],
       "security": [{"bearerAuth": []}],
       "responses":{
          "400":{
             "description":"Error"
          },
          "200":{
             "description":"OK"
          }
       }
    },
    "get":{
      "summary":"Pegar um cliente por Id",
      "description":"Retorna dados de um cliente com base no seu ID",
      "parameters":[
        {
           "name":"id",
           "in":"path",
           "description":"ID do cliente",
           "required":true,
           "schema":{
              "type":"string",
              "format":"uuid"
           }
        }
     ],
      "tags":[
         "Customers"
      ],
      "responses":{
         "409":{
            "description":"Conflict"
         },
         "200":{
            "description":"OK"
         }
      }
   },
   "delete":{
    "summary":"Deletar um cliente",
    "description":"Deleta o cliente com base no UUID",
    "parameters":[
      {
         "name":"id",
         "in":"path",
         "description":"ID do cliente",
         "required":true,
         "schema":{
            "type":"string",
            "format":"uuid"
         }
      }
   ],
   "security": [{"bearerAuth": []}],
    "tags":[
       "Customers"
    ],
    "responses":{
       "400":{
          "description":"Error"
       },
       "204":{
          "description":"No Content"
       }
    }
 }
 }
